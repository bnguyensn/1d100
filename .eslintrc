{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/react",
    "prettier/flowtype"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    //    "jest": true,
    "es6": true,
    "mongo": true
  },
  "plugins": [
    "flowtype",
    "jsx-a11y"
  ],
  "globals": {
    //        "VERSION": true,
    //        "$PropertyType": true
  },
  "rules": {
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "aspects": [
          "invalidHref"
        ]
      }
    ],
    "linebreak-style": 0,
    "no-unused-vars": 0,
    "spaced-comment": 0,
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "error"
        ]
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ]
    //        "import/no-extraneous-dependencies": 0,
    //        "react/prop-types": 0,
    //        "arrow-parens": 0,
    //        "import/prefer-default-export": 0,
    //        "class-methods-use-this": 0,

    //        "prefer-template": "off",
    //        "no-plusplus": 0,
    //        "no-underscore-dangle": "off",
    //        "no-nested-ternary": "warn",
    //        "react/require-default-props": "off",
    //        "import/no-named-default": 0
  }
}